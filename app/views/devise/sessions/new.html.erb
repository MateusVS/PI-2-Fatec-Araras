<div class="col-12 bg-info d-flex justify-content-center align-items-center" style="min-height: 100vh">
  <div class="container col-md-4 col-sm-8 p-4 bg-white rounded">
    <div class="row text-center mb-4">
      <h2>Login</h2>
    </div>

    <% flash.each do |name, msg| %>
      <div class="row mb-4 alert alert-danger">
        <% if msg.class == Array %>
          <% msg.each do |message| %>
            <%= content_tag :div, message, :id => "flash_#{name}" %>
          <% end %>
        <% else %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-4">
        <%= f.submit "Entrar", class: "btn btn-success rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
