<div class="col-12 bg-info d-flex justify-content-center align-items-center" style="min-height: 100vh">
  <div class="container col-md-4 col-sm-8 p-4 bg-white rounded">
    <div class="row text-center mb-4">
      <h2>Esqueceu sua senha?</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded" %>
      </div>

      <div class="d-grid mb-4">
        <%= f.submit "Enviar instruções por e-mail", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>